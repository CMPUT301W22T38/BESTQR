<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/leaderboard_list_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/leaderboard_list_guideline1"/>

    <TextView
        android:id="@+id/leaderboard_list_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:padding="10dp"
        app:layout_constraintStart_toEndOf="@+id/leaderboard_list_guideline1"
        app:layout_constraintEnd_toStartOf="@+id/leaderboard_list_guideline2"/>

    <TextView
        android:id="@+id/leaderboard_list_total_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:padding="10dp"
        app:layout_constraintStart_toEndOf="@+id/leaderboard_list_guideline2"
        app:layout_constraintEnd_toEndOf="@+id/leaderboard_list_guideline3"/>

    <TextView
        android:id="@+id/leaderboard_list_scanned_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:padding="10dp"
        app:layout_constraintStart_toEndOf="@+id/leaderboard_list_guideline3"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leaderboard_list_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leaderboard_list_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leaderboard_list_guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

</androidx.constraintlayout.widget.ConstraintLayout>